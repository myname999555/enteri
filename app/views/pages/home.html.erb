<% if current_user.present? %>

  <% @responses.each do |response| %>

    <% if  response.accept!=nil && response.seen==false%>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-2">
            <% if response.accept==true %>

            <div class="alert alert-success alert-dismissible " role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              Your response to <%= response.user.email %> about <%= response.item.name %> has been accepted.
            </div>

            <% elsif response.accept==false %>

            <div class="alert alert-danger alert-dismissible " role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              Your response to <%= response.user.email %> about <%= response.item.name %> has been rejected.
            </div>
            <% end %>

          </div>
        </div>
      </div>
      <% response.seen=true %>
      <% response.save %>

    <% end %>

  <% end %>

<% end %>
